#include "push_swap.h"

int	findnumber(int *tab_a, int number)
{
	int	i;

	i = 0;
	while (tab_a[i] != number)
		i++;
	return (i);
}

int	findnextsmol(int *tab_a, int ismol)
{
	int	i;

	i = 0;
	while (tab_a[i])
	{
		if (tab_a[i] == tab_a[ismol] + 1)
			return (i);
		i++;
	}
	return (-1);
}

void	firsttotop(int *tab_a, int argc)
{
	if (findnumber(tab_a, 1) > (argc / 2))
		while (findnumber(tab_a, 1) != 0)
			rotate_a(tab_a);
	else
		while (findnumber(tab_a, 1) != 0)
			r_rotate_a(tab_a);
}

void	makehelptab(int *tab_a, int *helptab)
{
	int	i;
	int	temp;

	helptab[0] = 1;
	temp = tab_a[0];
	i = 1;
	while (tab_a[i])
	{
		if (temp < tab_a[i])
		{
			temp = tab_a[i];
			helptab[i] = 1;
		}
		else
			helptab[i] = -1;
		i++;
	}
	helptab[i] = 0;
}
/*
** makehelptab peut etre amelioree en cherchant le plus
** de chars a la suite possible dans lordre croissant

void	ft_sort(int *tab_a, int *tab_b, int argc)
{
	int	*helptab;

	firsttotop(tab_a, argc);
	helptab = malloc(argc - 1 * sizeof(int));
	makehelptab(tab_a, helptab);
}
*/

void	rush_b(int *tab_a, int *tab_b, int *helptab)
{
	int	i;

	i = 0;
	while (helptab[i])
	{
		if (helptab[i] == 1)
			r_rotate_a(tab_a);
		else
			push_b(tab_a, tab_b);
		i++;
	}
}

int	bbig(int *tab_b)
{
	int	i;
	int	big;

	big = tab_b[0];
	i = 1;
	while (tab_b[i])
	{
		if (big < tab_b[0])
			big = tab_b[0];
		i++;
	}
	return (big);
}

void	bigtotop(int *tab_b, int argc)
{
	if (findnumber(tab_b, bbig(tab_b)) > (argc / 2))
		while (findnumber(tab_b, bbig(tab_b)) != 0)
			r_rotate_b(tab_b);
	else
		while (findnumber(tab_b, bbig(tab_b)) != 0)
			rotate_b(tab_b);
}

void	paffichage(int *tab_a, int *tab_b)
{
	int	i;

	i = 0;
	printf("tab a:\n");
	while (tab_a[i])
	{
		printf("%d\n", tab_a[i]);
		i++;
	}
	i = 0;
	printf("tab b:\n");
	while (tab_b[i])
	{
		printf("%d\n", tab_b[i]);
		i++;
	}
	printf("----\n");
}

void	returnbetter_b(int *tab_b, int *tab_a)
{
	while (tab_b[0])
	{
		if (tab_b[0] > tab_a[0] && tab_b[0] < tab_a[1])
		{
			r_rotate_a(tab_a);
			push_a(tab_a, tab_b);
		}
		else
			r_rotate_a(tab_a);
	}
}

void	ft_sort(int *tab_a, int *tab_b, int argc)
{
	int	moves;
	int	*helptab;

	moves = 0;
	firsttotop(tab_a, argc);
	helptab = malloc(argc - 1 * sizeof(int));
	makehelptab(tab_a, helptab);
	rush_b(tab_a, tab_b, helptab);
	returnbetter_b(tab_b, tab_a);
	firsttotop(tab_a, argc);
}
